<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity"
        android:background="#199887">

        <ImageView
            android:id="@+id/welcomeImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="오늘 하루는 어떠셨나요?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeImageView" />

        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="16dp"

            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/welcomeScreenView1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/welcome_whitecircle"
             />

        <ImageView
            android:id="@+id/welcomeScreenView2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/welcome_graycircle"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:id="@+id/welcomeScreenView3"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_marginLeft="60dp"
            android:src="@drawable/welcome_graycircle" />
        </RelativeLayout>

        <Button
            android:id="@+id/welcomeNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/white"
            android:text="다음으로"

            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <Button
            android:id="@+id/welcomeGoMainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/white"
            android:text="건너뛰기"
            android:visibility="visible"

            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>